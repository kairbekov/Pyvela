<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="10dp"
        android:background="@drawable/layout_bg_round1">
        <TextView
            android:textSize="@dimen/text_size_main"
            android:text="wadawd dj jdwadjadjia j oiwdjawiojdajdoiawjd waodjawoidj"
            android:id="@+id/subject_test_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <Button
            android:text="Answer 1"
            android:textSize="@dimen/text_size_main"
            android:id="@+id/subject_frag_answer1"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:background="@drawable/layout_bg_round1"
            android:paddingLeft="5dp"
            android:layout_marginBottom="@dimen/answer_margin" />
        <Button
            android:text="Answer 2"
            android:textSize="@dimen/text_size_main"
            android:layout_height="0dp"
            android:id="@+id/subject_frag_answer2"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:background="@drawable/layout_bg_round1"
            android:paddingLeft="5dp"
            android:layout_marginBottom="@dimen/answer_margin" />
        <Button
            android:layout_height="0dp"
            android:text="Answer 3"
            android:textSize="@dimen/text_size_main"
            android:id="@+id/subject_frag_answer3"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:background="@drawable/layout_bg_round1"
            android:paddingLeft="5dp"
            android:layout_marginBottom="@dimen/answer_margin" />
        <Button
            android:text="Answer 4"
            android:textSize="@dimen/text_size_main"
            android:id="@+id/subject_frag_answer4"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_weight="1"
            android:padding="@dimen/answer_padding"
            android:background="@drawable/layout_bg_round1"
            android:paddingLeft="5dp"
            android:layout_marginBottom="@dimen/answer_margin" />
        <Button
            android:text="Answer 5"
            android:textSize="@dimen/text_size_main"
            android:id="@+id/subject_frag_answer5"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:background="@drawable/layout_bg_round1"
            android:paddingLeft="5dp"
            android:layout_marginBottom="@dimen/answer_margin" />
    </LinearLayout>
</LinearLayout>