<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAuthBackground"
    android:padding="@dimen/entranceTextFieldsMargin">
<!-- Text Fields -->
    <LinearLayout
        android:id="@+id/reg_fields"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:clipToPadding="false">
        <EditText
            android:inputType="text"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/regEmailText"
            android:textColor="@color/colorAuthEditTextText"
            android:textColorHint="@color/colorAuthTextEditHint"
            android:elevation="2dp"
            android:translationZ="5dp"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />
        <EditText
            android:inputType="textPassword"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/regPasswordText"
            android:textColor="@color/colorAuthEditTextText"
            android:textColorHint="@color/colorAuthTextEditHint"
            android:elevation="2dp"
            android:translationZ="5dp"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />
        <EditText
            android:inputType="textPassword"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/regRePasswordText"
            android:textColor="@color/colorAuthEditTextText"
            android:textColorHint="@color/colorAuthTextEditHint"
            android:elevation="2dp"
            android:translationZ="5dp"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />
        <Button
            android:id="@+id/reg_sign_up"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@color/authContrast"
            android:textColor="@color/colorAuthPrimary"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/authSingUp" />
    </LinearLayout>
<!-- Logo -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:layout_above="@id/reg_fields">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pyvela_logo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/authContrast"
            android:textSize="50sp" />
    </LinearLayout>
</RelativeLayout>